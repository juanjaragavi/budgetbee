# SendGrid Configuration for Contact Form
# Get your API key from https://sendgrid.com/
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Email Configuration
# Sender email must be verified in SendGrid
SENDER_EMAIL=noreply@budgetbeepro.com

# Where contact form submissions should be sent
RECIPIENT_EMAIL=info@budgetbeepro.com

# Optional: set to 'eu' if using an EU regional subuser
# SENDGRID_REGION=eu

# Optional: enable sandbox mode for development (SendGrid will not actually deliver the email)
# SENDGRID_SANDBOX=true

# Optional SMTP fallback if SendGrid quota is exceeded
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=apikey
# SMTP_PASS=your_sendgrid_api_key_here
