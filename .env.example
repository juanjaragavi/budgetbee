# Brevo Configuration for Contact Form
# Get your API key from https://app.brevo.com/
BREVO_API_KEY=your_brevo_api_key_here

# Email Configuration
# Sender email should be verified in Brevo
SENDER_EMAIL=noreply@budgetbeepro.com

# Where contact form submissions should be sent
RECIPIENT_EMAIL=info@budgetbeepro.com

# Optional: enable sandbox mode for development (skips remote calls)
# BREVO_SANDBOX=true
# SENDGRID_SANDBOX=true # legacy flag still respected

# Optional SMTP fallback if Brevo API fails
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_brevo_smtp_login
# SMTP_PASS=your_brevo_smtp_password
