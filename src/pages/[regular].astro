---
import Base from "@/layouts/Base.astro";
import Default from "@/layouts/Default.astro";
import { getSinglePage } from "@/lib/contentParser.astro";

export async function getStaticPaths() {
  const pages = await getSinglePage("pages");

  const paths = pages.map((page) => ({
    params: {
      regular: page.slug,
    },
    props: { page },
  }));
  return paths;
}

// Resolve page from static props when available; otherwise, fallback to params
const { regular } = Astro.params;
let page: any = Astro.props?.page as any;

if (!page && regular) {
  const pages = await getSinglePage("pages");
  page = (pages as any[]).find(
    (p) => p.slug === regular || p.id === regular,
  ) as any;
}

if (!page) {
  // Gracefully handle unknown slugs
  return Astro.redirect("/404");
}

const { title, meta_title, description, image } = page.data;
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <Default data={page} />
</Base>
